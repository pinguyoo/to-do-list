{
  "root": true,
  "extends": ["plugin:prettier/recommended", "@vue/typescript/recommended", "plugin:vue/vue3-essential", "@vue/standard"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["vue"],
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 2020
  },
  "rules": {
    "indent": ["error", 2],
    "max-len": ["error", { "code": 120 }],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": ["error", "never"],
    "object-curly-spacing": ["error"],
    "array-bracket-spacing": ["error"],
    "block-spacing": ["error"],
    "camelcase": ["error"],
    "comma-spacing": ["error"],
    "func-call-spacing": ["error"],
    "func-style": ["error"],
    "key-spacing": ["error"],
    "keyword-spacing": ["error"],
    "prettier/prettier": 0
  }
}
